package javaPrimerosPasos;

public class condicionales {
	
	public static void main(String[] args) 
	{
		int edad = 21;
		
		if(edad >= 18) {
			System.out.println("Puedes entrar");
		} else {
			System.out.println("Debes ser mayor para ingresar");
		}
		
		if(edad >= 100) // If we don't add brackets and the condition is evaluated as True, the first thing that comes after the if, will be executed 
			System.out.println("Como seguis vivo?");
		
		
	}
}
