<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.2">
		xmlns="http://xmlns.jcp.org/xml/ns/persistence"
			xmlns:xsi="http://www.w3.org/201/XMLSchema-instance"
			xmlns:schemaLocation = "http://xmlns.jcp.org/xml/ns/persistence 
			http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
		
		<persistence-unit name="tienda" transaction-type="RESOURCE_LOCAL">
			<properties>
				<propertie name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
				<propertie name="javax.persistence.jdbc.url" value="jdbc:h2:mem:tienda"/>
				<propertie name="javax.persistence.jdbc.user" value="sa"/>
				<propertie name="javax.persistence.jdbc.password" value=""/>
				
				<propertie name="hibenate.show_sql" value="true"/>
				<propertie name="hibenate.hbm2ddl.auto" value="update"/>
				<propertie name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
			</properties>
		</persistence-unit>
</persistence>